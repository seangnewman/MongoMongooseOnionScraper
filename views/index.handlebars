{{!-- Templating for all Articles  --}}

{{!-- Iterate Over all the articles --}}
{{#each articles}}
  <ul class="collapsible" data-collapsible="accordion">

    <!-- Article Drop Down -->
    <li>
      <div style="background-color: white;" class="collapsible-header green lighten-2">
       <!-- <i class="material-icons">add</i> <b>{{updated}}</b> -->
        <div id="headlineContainer" style="clear: left; line-height: 110%; padding-bottom: .5rem;"><b>{{headline}}</b></div>
      </div>
      <div class="collapsible-body" style="background-color: white;">
        <p>
          {{summary}}

          <br><br>

          <i><a href="{{URL}}" target="_blank">Article located here.</a>.</i>
        </p>
          
      </div>
    </li>


    <!-- Add Comments Drop Down -->
    <li>
      <div class="collapsible-header"><i class="material-icons">note_add</i></div>
      <div class="collapsible-body" style="background-color: white;">

        <form id="form-add-{{_id}}"  style="background-color: white;">

          <!-- Author Name Input -->
          <div class="row">
            <div class="input-field col s2"></div>
            <div class="input-field col s8">
              <input id="name" name="name" type="text" class="validate">
              <label for="name">Name:</label>
            </div>
          </div>
          
          <!-- Comment Input -->
          <div class="row">
            <div class="input-field col s2"></div>
            <div class="input-field col s8">
              <textarea id="content" name="content" class="materialize-textarea"></textarea>
              <label for="content">Comment:</label>
            </div>
          </div>

            <!-- Submit Button -->
            <div class="row">
              <div class="input-field col s2"></div>
              <div class="input-field col s8">
              <center><input class="btn add-comment-button" data-id="{{_id}}" type="submit" value="Submit"></center>
              </div>
            </div>
          
        </form>

      </div>
    </li>


    <!-- View Comments Drop Down -->
    <li>
      <div class="collapsible-header"><i class="material-icons">short_text</i></div>
      <div class="collapsible-body" style="background-color: white;">
      
        {{!-- Check if the article has comments --}}
        {{#if comments}}

          {{!-- Article has comments so iterate over them  --}}
          <ul class="collection">
            {{#each comments}}
            
              <li class="collection-item">

                {{!-- Add Author Name --}}
                <b>{{author}}</b> 

                {{!-- Add a Delete Button --}}
                <span class="badge">
                  <form id="form-delete-{{_id}}" action="remove/comment/{{_id}}" method="post">
                    <input class="btn-small delete-comment-button" data-id="{{_id}}" type="submit" value="Delete" style="color: white; background-color: red; border-color: red;">
                  </form>
                </span>

                <br>

                {{!-- Add the Content of the Comment --}}
                {{content}}

              </li> 
            {{/each}}
          </ul>
        
        {{!-- No comments, so display message --}}
        {{else}}
          <p>No Comments Yet :( </p>
        {{/if}}
            
        
      </div>
    </li>

  </ul>
{{/each}}